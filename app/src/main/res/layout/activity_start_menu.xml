<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg">

    <Button
        android:id="@+id/bt_find_quest"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Join Game"
        android:layout_weight="1"
        android:textColor="#888888"
        android:background="@drawable/mybutton"
        tools:layout_editor_absoluteY="167dp"
        tools:layout_editor_absoluteX="141dp"
        android:layout_above="@+id/bt_create_quest"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="107dp" />

    <Button
        android:id="@+id/bt_create_quest"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Create Game"
        android:layout_weight="1"
        android:textColor="#888888"
        android:background="@drawable/mybutton"
        tools:layout_editor_absoluteY="272dp"
        tools:layout_editor_absoluteX="141dp"
        android:layout_marginBottom="143dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/bt_find_quest"
        android:layout_alignStart="@+id/bt_find_quest" />
</RelativeLayout>
